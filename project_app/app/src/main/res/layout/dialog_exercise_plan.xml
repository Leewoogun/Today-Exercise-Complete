<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_plan_calendar_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:src="@drawable/calendar_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_plan_date"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:includeFontPadding="false"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/iv_plan_calendar_icon"
        app:layout_constraintTop_toTopOf="@id/iv_plan_calendar_icon"
        tools:text="2023-12-16" />

    <TextView
        android:id="@+id/tv_plan_title"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동 계획표"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_plan_calendar_icon"
        app:layout_constraintStart_toStartOf="@id/tv_plan_date"
        app:layout_constraintTop_toBottomOf="@id/tv_plan_date" />

    <TextView
        android:id="@+id/tv_plan_list"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="운동 목록"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/iv_plan_calendar_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_plan_calendar_icon" />

    <ImageView
        android:id="@+id/iv_plan_plus"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/plus_icon"
        app:layout_constraintBottom_toBottomOf="@id/tv_plan_list"
        app:layout_constraintStart_toEndOf="@id/tv_plan_list"
        app:layout_constraintTop_toTopOf="@id/tv_plan_list" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_plan_list">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/background_edittext_no_radius"
                android:hint="어떤 운동을 하실껀가요?"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext_no_radius"
                android:hint="어떤 운동을 하실껀가요?"
                android:paddingStart="10dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext_no_radius"
                android:hint="어떤 운동을 하실껀가요?"
                android:paddingStart="10dp" />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>