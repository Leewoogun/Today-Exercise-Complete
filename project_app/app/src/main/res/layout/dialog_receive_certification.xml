<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_receive_date"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2023-12-17" />

    <TextView
        android:id="@+id/tv_receive_user"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_receive_date"
        app:layout_constraintTop_toBottomOf="@id/tv_receive_date"
        tools:text="OOO님 운동 인증하기" />

    <ImageView
        android:id="@+id/iv_receive_img"
        android:layout_width="222dp"
        android:layout_height="213dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_receive_user" />

    <TextView
        android:id="@+id/tv_receive_friend_exercise"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_receive_date"
        app:layout_constraintTop_toBottomOf="@id/iv_receive_img"
        tools:text="OOO님의 운동 목록" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_receive_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_receive_friend_exercise"
        tools:listitem="@layout/item_certification_list"/>

</androidx.constraintlayout.widget.ConstraintLayout>