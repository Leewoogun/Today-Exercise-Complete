<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_home_title"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="OOO님의 운동일지"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_contact"
        style="@style/Text.Small16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OOO님과 내기중입니다."
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/tv_home_title"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title" />

    <TextView
        android:id="@+id/tv_home_no_friend"
        style="@style/Text.Small16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 내기 중인 친구가 없어요."
        app:layout_constraintStart_toStartOf="@id/tv_home_title"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/Text.normal12"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/background_white_button"
        android:text="친구 찾기"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_no_friend"
        app:layout_constraintStart_toEndOf="@id/tv_home_no_friend"
        app:layout_constraintTop_toTopOf="@id/tv_home_no_friend" />

    <ImageView
        android:id="@+id/iv_home_logout"
        android:layout_width="68dp"
        android:layout_height="60dp"
        android:src="@drawable/logout_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_home_title" />

    <View
        android:id="@+id/line_home_separate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="139dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_today_exercise"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="오늘의 운동"
        app:layout_constraintStart_toStartOf="@id/tv_home_title"
        app:layout_constraintTop_toBottomOf="@id/line_home_separate" />

    <ImageView
        android:id="@+id/iv_home_excercise_icon"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:src="@drawable/today_exercise_icon"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_today_exercise"
        app:layout_constraintStart_toEndOf="@id/tv_home_today_exercise"
        app:layout_constraintTop_toTopOf="@id/tv_home_today_exercise" />

    <TextView
        style="@style/Text.Small16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2023-12-15"
        app:layout_constraintStart_toEndOf="@id/iv_home_excercise_icon"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_today_exercise"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tv_home_exercise_plan"
        style="@style/Text.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="오늘은 계획한 운동이 없습니다."
        android:textColor="@color/blue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_home_today_exercise"
        app:layout_constraintTop_toBottomOf="@id/tv_home_today_exercise" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_exercise_start"
        style="@style/Text.normal"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_home_today_exercise"
        app:layout_constraintTop_toBottomOf="@id/tv_home_exercise_plan"
        android:background="@drawable/background_button_radius10"
        android:text="운동 시작하기"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <TextView
        style="@style/Text.Small16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btn_exercise_start"
        app:layout_constraintTop_toTopOf="@id/btn_exercise_start"
        app:layout_constraintBottom_toBottomOf="@id/btn_exercise_start"
        android:layout_marginStart="15dp"
        android:visibility="gone"
        android:text="00분째 운동 중" />

    <View
        android:id="@+id/line_home_separate2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_exercise_start" />

</androidx.constraintlayout.widget.ConstraintLayout>