<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_profile_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_img_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_nickname"
        style="@style/Text.Small16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이우건"
        app:layout_constraintStart_toEndOf="@id/iv_item_profile_img"
        app:layout_constraintTop_toTopOf="@id/iv_item_profile_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_profile_img"
        android:layout_marginStart="15dp" />
    
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_nickname"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_nickname"
        android:layout_marginEnd="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>